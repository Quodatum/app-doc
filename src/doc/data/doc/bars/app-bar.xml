<bar xmlns="https://github.com/Quodatum/app-doc/cvabar">
	<name>app-bar</name>
	<crumbs type="array">
		<link>
			<text></text>
			<icon>glyphicon glyphicon-home </icon>
			<href>#/about</href>
			<title>Home</title>
		</link>
		<link>
			<text>Apps</text>
			<href>#/data/app</href>
			<title>list of apps</title>
		</link>
		<link>
            <text>{{app}}</text>
            <href>#/data/app/{{app}}</href>
            <title>this app</title>
        </link>
	</crumbs>
	<views type="array">
		<command>
			<text>Client</text>
			<action>setView('client')</action>
			<icon>glyphicon glyphicon-th</icon>
			<title>view data as grid</title>
			<class>{'btn-primary':view=='client'}</class>
		</command>
		<command>
			<text>Server</text>
			<action>setView('server')</action>
			<icon>glyphicon glyphicon-signal</icon>
			<title>view data as chart</title>
			<class>{'btn-primary':view=='graph'}</class>
		</command>
	</views>
	<actions type="array">
		<command>
			<text>Run</text>
			<action>setView('run')</action>
			<icon>glyphicon glyphicon-forward</icon>
			<title>setup a timing run</title>
		</command>
		<command>
			<text>Save</text>
			<action>setView('save')</action>
			<icon>glyphicon glyphicon-saved</icon>
			<title>save timing data to library</title>
		</command>
		
	</actions>
</bar>