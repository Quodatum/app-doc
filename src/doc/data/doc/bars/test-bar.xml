<bar xmlns="https://github.com/Quodatum/app-doc/cvabar">
	<name>test-bar</name>
	<list>true</list>
	<crumbs type="array">
	   <link>
            <icon>glyphicon glyphicon-home</icon>
            <href>#</href>
            <title>Home</title>
        </link>
		<link>
			<text>path-frag</text>
			<href>#/path</href>
			<title>A crumb in the trail</title>
		</link>
		<link>
			<text>{{activesuite}}</text>
			<href>#/suite/{{activesuite}}</href>
			<title>Current suite</title>
		</link>
	</crumbs>
	<views type="array">
		<command>
			<text>View1</text>
			<action>doSomething('grid')</action>
			<icon>glyphicon glyphicon-th</icon>
			<title>click to select some view on current data</title>
			<class>{'btn-primary':view=='grid'}</class>
		</command>
		<command>
			<text>View2</text>
			<action>doSomething('graph')</action>
			<icon>glyphicon glyphicon-signal</icon>
			<title>view data as chart</title>
			<class>{'btn-primary':view=='graph'}</class>
		</command>
	</views>
	<actions type="array">
		<command>
			<text>Act1</text>
			<action>setView('run')</action>
			<icon>glyphicon glyphicon-forward</icon>
			<title>setup a timing run</title>
		</command>
	
	</actions>
</bar>