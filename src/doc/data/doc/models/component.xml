<entity name="component" xmlns="https://github.com/Quodatum/app-doc/entity">
	<description>About a software component. Such as a Javascript library or an EXPath package</description>
	<fields>
		<field name="name" type="xs:string">
			<description>name</description>
			<xpath>$_/@name</xpath>
		</field>
		<field name="tagline" type="xs:string">
			<description>description</description>
			<xpath>$_/tagline</xpath>
		</field>
		<field name="cdn" type="xs:string">
			<description>cdn url</description>
			<xpath>$_/release/cdn[1]</xpath>
		</field>
		<field name="html" type="element()">
            <description>html for component</description>
            <xpath>$_</xpath>
        </field>
	</fields>
	<iconclass>fa fa-puzzle-piece</iconclass>
	<data type="element(cmp)"></data>
</entity>