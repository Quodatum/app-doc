<entity name="application" type="element(item)">
    <description>A RESTXQ based web application .</description>
	<fields>
		<field name="name" type="xs:string">
			<description>Application name</description>
			<xpath>$_/name</xpath>
		</field>
		<field name="description" type="xs:string+">
			<description>Application description</description>
			<xpath>'todo ' || $_/name </xpath>
		</field>
		<field name="uri" type="xs:string+">
            <description>Application link</description>
            <xpath>'/' || $_/name</xpath>
        </field>
        <field name="logo" type="xs:string+">
            <description>uri for the application logo</description>
            <xpath>'/static/' || $_/name  || '/logo.svg'</xpath>
        </field>
	</fields>
	<iconclass>glyphicon glyphicon-cog</iconclass>
</entity>