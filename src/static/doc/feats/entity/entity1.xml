<div>
	<cva-bar ng-model="bar" params="params" state="$state" single="true">
    <a href="./data/{{model.name}}" target="json" class="btn btn-default navbar-btn">
                                Json
                            </a>
	</cva-bar>
	
	<div class="fluid">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">
					<div class="pull-right">type: {{model.type}}</div>
					<i class="{{model.iconclass}}"></i>
					{{model.name}}
				</h3>
			</div>
			<div class="panel-body">
				<div>{{model.description}}</div>
				<div>
					iconclass:<span class="label label-default">{{model.iconclass}}</span> 
				</div>
				<div>
				<h4>Code</h4>
				<pre>{{model.code}}</pre>
				</div>
				<div>
					<h4>Fields <span class="badge badge-default">{{model.nfields}}</span></h4>
					<table class="table">
						<thead>
							<tr>
								<th>Name</th>
								<th>Type</th>
								<th>XPath</th>
								<th>description</th>
							</tr>
						</thead>
						<tbody>
							<tr ng-repeat="f in fields">
								<td>{{f.name}}</td>
								<td>{{f.type}}</td>
								<td>{{f.xpath}}</td>
								<td>{{f.description}}</td>
							</tr>
						</tbody>
					</table>
				</div>

			</div>
		</div>
	</div>
</div>