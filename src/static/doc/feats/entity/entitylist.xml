<div>
	<div class="navbar" role="toolbar">
		<ul class="breadcrumb navbar-nav">
			<li class="active">Entities ({{models.metadata.count}})</li>
			<li>

			</li>
		</ul>
		<ul class="nav navbar-nav nav-pills pull-right" style="position:relative;top:-6px">
			<li>
				<form class="form-inline">
					Filter:
					<input type="text" data-ng-model="params.q" style="width:6em;" />
					<sortui ng-model="params" options="options">sort</sortui>
				</form>

			</li>
			<li>
				<uipage>page</uipage>
			</li>
		</ul>
	</div>
	<div class="row">
		<div ng-repeat="model in models" class="qd-model media col-sm-6 col-md-4 well">
			<span class="pull-right">
				<a href="#/data/entity/{{model.name}}" title="About this entity">
                        <i class="glyphicon glyphicon-wrench"></i>
                    </a>    
			</span>

			<div class="media-body">
				<h4 class="media-heading">
					<a href="#/data/entity/{{model.name}}" title="About this entity">
						<i class="{{model.iconclass}}"></i>
						{{model.name}}
					</a>					
                    <a href="#{{model.parentlink}}">{{model.parent}}</a>
				</h4>
				<div class="media-body">
					
					<div>
                        <a href="#/data/{{model.name}}" class="pull-left qd-icon">
                            <i class="qd-ltext glyphicon glyphicon-list-alt" title="Data for {{model.name}}"></i>
                        </a>
                        <div>{{model.description}}</div>
                        <div><a href="./data/{{model.name}}" target="json">
                            <i class="fa fa-angle-double-left" title="Json data for {{model.name}}"></i>
                        </a></div>
                    </div>
					
				</div>
			</div>
		</div>
	</div>

</div>